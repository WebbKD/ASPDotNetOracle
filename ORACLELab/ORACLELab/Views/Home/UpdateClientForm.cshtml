
@{
    ViewBag.Title = "UpdateClientForm";
}

<div class="container">
    <h2 class="text-center">Update Client Form</h2>

    <form action="updateClient">
        <div class="form-group">
            <div class="col-md-6">
                <label for="lastName">Last Name</label>
                <input type="text" class="form-control" id="lastName" name="LName" value=@ViewBag.Client[0].LName maxlength="30" />
            </div>
            <div class="col-md-6">
                <label for="firstName">First Name</label>
                <input type="text" class="form-control" id="firstName" name="FName" value=@ViewBag.Client[0].FName maxlength="30" />
            </div>
        </div>
        <br /> <br />
        <div class="form-group">
            <div class="col-md-6">
                <label for="StreetAddress">Street Address</label>
                <input type="text" class="form-control" id="StreetAddress" name="StreetAddress" value=@ViewBag.Client[0].StreetAddress maxlength="50" />
            </div>
            <div class="col-md-6">
                <label for="Zip">Zip</label>
                <input type="text" class="form-control" id="Zip" name="Zip" value=@ViewBag.Client[0].Zip maxlength="5" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <label for="Borough">Borough</label>
                <select class="form-control" id="Borough" name="Borough">
                    <option>MA</option>
                    <option>BK</option>
                    <option>Qu</option>
                    <option>BX</option>
                    <option>ST</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="DateOfBirth">DOB</label>
                <input type="text" class="form-control" id="DateOfBirth" name="DateOfBirth" value=@ViewBag.Client[0].DateOfBirth maxlength="15" />
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" style="margin-top:20px;">Submit</button>
            <input type="text" class="hidden" name="clientID" value="@ViewBag.Client[0].ClientID" />
        </div>
    </form>
</div>